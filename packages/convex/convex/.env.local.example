# Convex configuration
CONVEX_DEPLOYMENT=your-deployment-name # from convex dashboard
CONVEX_SITE_URL=https://your-convex-domain.convex.cloud # base URL for HTTP routes

# Auth configuration  
AUTH_SECRET=your-secret-key # generate with: openssl rand -base64 32
SITE_URL=http://localhost:5173 # for development, use your production URL for prod

# Email configuration (Resend)
AUTH_RESEND_KEY=re_your_resend_api_key_here # from resend.com dashboard
AUTH_EMAIL="Your App <noreply@yourdomain.com>" # your verified sending domain

# OAuth configuration (GitHub user auth)
AUTH_GITHUB_ID=your_github_client_id # from GitHub OAuth App
AUTH_GITHUB_SECRET=your_github_client_secret # from GitHub OAuth App

# GitHub App (connectors)
GITHUB_APP_ID=your_github_app_id
GITHUB_APP_SLUG=your_github_app_slug
GITHUB_APP_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY\n-----END PRIVATE KEY-----"

# OAuth configuration (Google)
AUTH_GOOGLE_ID=your_google_client_id # from Google Cloud Console
AUTH_GOOGLE_SECRET=your_google_client_secret # from Google Cloud Console
