{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"jsx": "react-jsx",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"moduleResolution": "bundler",
		"baseUrl": ".",
		"paths": {
			"@hikai/*": ["../packages/*"]
		}
	}
}
